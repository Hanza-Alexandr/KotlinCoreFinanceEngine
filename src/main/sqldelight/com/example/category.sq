-- ===========================
-- TABLE: CategoryDao
-- ===========================

CREATE TABLE CategoryDao (
    id INTEGER NOT NULL PRIMARY KEY,
    path_icon TEXT NOT NULL,
    user_id INTEGER REFERENCES UserDao(id) ON DELETE CASCADE,
    color_id INTEGER NOT NULL REFERENCES ColorDao(id),
    name TEXT NOT NULL,
    parent_category INTEGER REFERENCES CategoryDao(id),
    need TEXT NOT NULL,
    is_hide INTEGER NOT NULL
);
