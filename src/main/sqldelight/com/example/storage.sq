-- ===========================
-- TABLE: StorageDao
-- ===========================

CREATE TABLE StorageDao (
  id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
  title TEXT NOT NULL
);

insertStorageDao:
INSERT INTO StorageDao(title)
VALUES (?);

updateStorageDao:
UPDATE StorageDao
SET title = ?
WHERE id = ?;

deleteStorageDao:
DELETE FROM StorageDao
WHERE id = ?;

selectStorageDaoById:
SELECT * FROM StorageDao
WHERE id = ?;

selectAllStorageDao:
SELECT * FROM StorageDao;
